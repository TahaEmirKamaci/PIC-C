int arr_a[3] = {0b00010011, 0b00100000, 0b01000111};

int sayac;

void main()
{
   set_tris_a(0xFF);
   set_tris_c(0x00);
   
   output_c(0x00);
   
   while(TRUE)
   { /*
       output_c(arr[0][sayac]);
      delay_ms(10);
      output_c(arr[1][sayac]);
      delay_ms(10);
      output_c(arr[2][sayac]);
      delay_ms(10);  */
      
      for(sayac = 0; sayac < 3; sayac++) {   
         output_c(arr_a[sayac]);
         delay_ms(10);
         
      }
      if(sayac == 3)
            sayac = 0;
      
      
      
   }

}
