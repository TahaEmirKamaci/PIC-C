#include <main.h>

void main()
{
   
   set_tris_a(0xFF);
   set_tris_b(0x00);
   output_c(0x00);

   int arr[11] ={0x3F, 0x06, 0x5B, 0x4F, 0x66, 0x6D, 0x7D, 0x07, 0x7F, 0x6F, 0x77};
   int sayac = 0;
   
   while(TRUE)
   {
      output_c(arr[sayac]);
      
      while(input(pin_A0) == 0); // basýlana kadar bekle
      delay_ms(20);
      sayac++;
      
      
      /*
      if(input(pin_A0)) {
         delay_us(200);
         sayac++;
         delay_ms(100);
      }*/
      if (sayac == 11) {
         sayac = 0;
      }
      
      output_c(arr[sayac]);
      while(input(pin_A0) == 1) // el çekilene kadar bekle
      delay_ms(20);
      
       /*for(sayac = 0; sayac <10 ; sayac++) {
         output_c(arr[sayac]);
         delay_ms(300);
       }*/
   }

}
